<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/nearest_background"

    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_vendor"
        android:layout_width="68dp"
        android:layout_height="68dp"
        app:civ_border_color="@color/background_logo_color"
        app:civ_border_width="3dp"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_gas_station"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="5"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/black"
                tools:text="@string/dummy" />

            <TextView
                android:id="@+id/distance_gas_station"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/nunito_extra_bold"
                android:textAlignment="viewEnd"
                tools:text="@string/dummy"
                tools:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/vendor_gas_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/nunito_semi_bold"
            android:textColor="@color/black"
            tools:text="@string/dummy" />

        <TextView
            android:id="@+id/address_gas_stations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semi_bold"
            android:textColor="@color/black"
            tools:text="@string/dummy" />
    </LinearLayout>
</LinearLayout>