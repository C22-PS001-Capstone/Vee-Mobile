<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".ui.profile.ChangePasswordFragment">

    <TextView
        android:id="@+id/current_password_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:labelFor="@+id/edt_current_password"
        android:text="@string/current_password_label"
        android:textColor="?android:textColorPrimary" />

    <id.vee.android.ui.customview.MyPasswordEditText
        android:id="@+id/edt_current_password"
        style="@style/ThemeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_background"
        android:enabled="true"
        android:fontFamily="@font/nunito_medium"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:labelFor="@+id/edt_new_password"
        android:text="@string/new_password_label"
        android:textColor="?android:textColorPrimary" />

    <id.vee.android.ui.customview.MyPasswordEditText
        android:id="@+id/edt_new_password"
        style="@style/ThemeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_background"
        android:enabled="true"
        android:fontFamily="@font/nunito_medium"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:labelFor="@+id/edt_confirm_new_password"
        android:text="@string/confirm_new_password_label"
        android:textColor="?android:textColorPrimary" />

    <id.vee.android.ui.customview.MyPasswordEditText
        android:id="@+id/edt_new_password_confirm"
        style="@style/ThemeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_background"
        android:enabled="true"
        android:fontFamily="@font/nunito_medium"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="12dp" />

    <Button
        android:id="@+id/btn_update_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/nunito_extra_bold"
        android:text="@string/update_password"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_create_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/nunito_extra_bold"
        android:text="@string/create_password"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:visibility="gone" />
</LinearLayout>